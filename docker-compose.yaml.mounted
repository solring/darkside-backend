version: "2"
services:
  mongo:
    image: mongo:4.4.2
    volumes:
      - ${MONGO}:/data
      - ${MONGO}/db:/data/db
      - ${MONGO}/configdb:/data/configdb
    ports:
      - 27017:27017
  darkside:
    build: .
    image: darkside-backend:0.2
    ports:
      - 5000:5000
    environment:
      - MONGO_URL=mongo
